    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "typescript1",
            "program": "${file}",
            "preLaunchTask": "npm: build",
            "sourceMaps": true,
            "smartStep": true,
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "runtimeArgs": [
                "--preserve-symlinks"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}